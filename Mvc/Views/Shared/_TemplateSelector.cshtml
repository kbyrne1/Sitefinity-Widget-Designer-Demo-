@model string
@using Telerik.Sitefinity.Mvc;
@using Telerik.Sitefinity.Frontend.Mvc.Helpers;

<div class="form-group">
    <label for="templateName">Template</label>
    <div class="row">
        <div class="col-xs-6">
            <select id="templateName" ng-model="properties.TemplateName.PropertyValue" class="form-control">
                @foreach (var viewName in Html.GetViewNames(Model, @"(?<viewName>^" + Model + @".*)$"))
                {
                    <option value="@viewName">@viewName.SplitCamelCase().Replace(Model + ".", "").Replace(".", " - ").Trim()</option>
                }
            </select>
        </div>
    </div>
</div>